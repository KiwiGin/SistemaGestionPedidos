@{
    ViewBag.Title = "Error 500 - Error del Servidor";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-12">
            <h1 class="display-4 text-danger">500</h1>
            <h2 class="mb-4">Error Interno del Servidor</h2>
            <p class="lead">Lo sentimos, pero algo salió mal en nuestro servidor. Estamos trabajando para solucionarlo.</p>
            <a href="@(Url.Action("Index", "Home"))" class="btn btn-primary mt-4">
                <i class="fas fa-home"></i> Regresar a la página principal
            </a>
            <a href="javascript:location.reload();" class="btn btn-secondary mt-4">
                <i class="fas fa-sync-alt"></i> Intentar de nuevo
            </a>
        </div>
    </div>
</div>

<style>
    .container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    h1 {
        font-size: 8rem;
        font-weight: bold;
    }

    h2 {
        font-size: 2.5rem;
    }

    p {
        font-size: 1.25rem;
    }
</style>

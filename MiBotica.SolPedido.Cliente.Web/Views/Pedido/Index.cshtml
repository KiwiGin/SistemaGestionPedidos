@model IEnumerable<MiBotica.SolPedido.Entidades.Core.Pedido>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary mb-4">Pedidos</h2>

<p>
    @Html.ActionLink("Agregar Nuevo Pedido", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<table class="table table-striped table-hover border shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.CodPedido)</th>
            <th>@Html.DisplayNameFor(model => model.NombreCompleto)</th>
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CodPedido)</td>
                <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.CodPedido }, new { @class = "btn btn-sm btn-primary mx-1" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.CodPedido }, new { @class = "btn btn-sm btn-info mx-1" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.CodPedido }, new { @class = "btn btn-sm btn-danger mx-1" })
                </td>
            </tr>
        }
    </tbody>
</table>

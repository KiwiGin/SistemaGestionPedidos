@{
    ViewBag.Title = "Página No Encontrada";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container text-center mt-5">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <h1 class="display-4 text-danger">404</h1>
            <h2 class="mb-4">¡Oops! Página no encontrada</h2>
            <p class="lead">Lo sentimos, pero la página que buscas no existe. Tal vez fue removida o nunca estuvo aquí.</p>
            <a href="@(Url.Action("Index", "Home"))" class="btn btn-primary mt-4">
                Regresar a la página principal
            </a>
        </div>
    </div>
</div>

<style>
    .container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    h1 {
        font-size: 8rem;
        font-weight: bold;
    }

    h2 {
        font-size: 2.5rem;
    }
</style>
